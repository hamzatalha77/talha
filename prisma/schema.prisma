generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @unique
  email String 
  firstName String
  lastName String
  profileImage String

  createdAt DateTime @default(now())
}

model Product{
  id String @id @unique
  name String
  description String
  price Float
  imageUrl String

  createdAt DateTime @default(now())
}